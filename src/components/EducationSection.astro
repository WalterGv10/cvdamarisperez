---
const education = [
  {
    titulo: "Perito en Mercadotecnia y Publicidad",
    institucion: "Colegio Sagrada Familia",
    periodo: "2011 - 2013"
  },
  {
    titulo: "Nivel Medio",
    institucion: "Instituto Miguel Soto Barillas",
    periodo: "2008 - 2010"
  },
  {
    titulo: "Nivel Primario",
    institucion: "Escuela Mixta Pedro José de Bethancourt",
    periodo: "2002 - 2007"
  }
];
---

<section id="educacion" class="py-16 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-slate-900 mb-12 text-center">Formación Académica</h2>
    <div class="space-y-6">
      {education.map((edu) => (
        <div class="bg-slate-50 p-6 rounded-lg border border-slate-100 flex flex-col sm:flex-row justify-between items-center text-center sm:text-left hover:shadow-md transition-shadow">
          <div>
            <h3 class="text-lg font-bold text-slate-900">{edu.titulo}</h3>
            <p class="text-slate-600">{edu.institucion}</p>
          </div>
          <div class="mt-2 sm:mt-0">
            <span class="inline-block px-3 py-1 bg-white border border-slate-200 rounded-full text-sm font-medium text-slate-500">
              {edu.periodo}
            </span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
