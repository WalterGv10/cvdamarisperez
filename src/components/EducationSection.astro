---
const education = [
  {
    titulo: "Perito en Mercadotecnia y Publicidad",
    institucion: "Colegio Sagrada Familia",
    periodo: "2011 – 2013",
    nivel: "Diversificado",
    principal: true
  },
  {
    titulo: "Nivel Medio (Básicos)",
    institucion: "Instituto Miguel Soto Barillas",
    periodo: "2008 – 2010",
    nivel: "Básico",
    principal: false
  },
  {
    titulo: "Nivel Primario",
    institucion: "Escuela Mixta Pedro José de Bethancourt",
    periodo: "2002 – 2007",
    nivel: "Primaria",
    principal: false
  }
];
---

<section id="educacion" class="py-24 bg-slate-50 relative overflow-hidden">
  <div class="absolute top-1/2 right-0 w-80 h-80 bg-vibrant/5 rounded-full blur-3xl"></div>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <h2 class="text-4xl font-bold text-slate-900 mb-16 text-center reveal text-backdrop">
      Formación <span class="text-primary">Académica</span>
    </h2>
    <div class="space-y-6">
      {education.map((edu, index) => (
        <div class={`relative bg-white p-8 rounded-2xl border ${edu.principal ? 'border-primary/30 shadow-lg' : 'border-slate-100 shadow-sm'} flex flex-col sm:flex-row justify-between items-center text-center sm:text-left hover:shadow-xl hover:shadow-primary/5 hover:-translate-y-1 transition-all duration-300 reveal delay-${index * 100} group`}>
          <!-- Decoration background -->
          <div class="absolute inset-0 -z-10 bg-gradient-to-tr from-primary/5 to-vibrant/5 blur-2xl rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="flex items-center gap-6">
            <div class={`w-14 h-14 ${edu.principal ? 'bg-primary text-white' : 'bg-primary/5 text-primary'} rounded-2xl flex items-center justify-center flex-shrink-0 transition-all duration-300 group-hover:scale-110`}>
               <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path d="M12 14l9-5-9-5-9 5 9 5z" />
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
               </svg>
            </div>
            <div>
              <h3 class={`text-xl font-bold ${edu.principal ? 'text-primary' : 'text-slate-900'}`}>{edu.titulo}</h3>
              <p class="text-slate-600 font-medium">{edu.institucion}</p>
            </div>
          </div>
          <div class="mt-4 sm:mt-0">
            <span class={`inline-block px-4 py-1.5 ${edu.principal ? 'bg-primary text-white' : 'bg-primary/5 border border-primary/10 text-primary'} rounded-full text-sm font-bold`}>
              {edu.periodo}
            </span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
