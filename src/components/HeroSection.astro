<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Dynamic Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-white to-blue-50 opacity-80"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-primary/20 rounded-full blur-[100px] animate-float opacity-30 mt-[-200px]"></div>
  <div class="absolute bottom-0 right-0 w-[800px] h-[600px] bg-secondary/10 rounded-full blur-[80px] mt-[100px]"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 flex flex-col items-center text-center z-10">
    <div class="reveal">
      <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-slate-900 mb-6 drop-shadow-sm">
        Damaris Aracely <br class="hidden md:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-blue-600 to-accent">Pérez Gonzalez</span>
      </h1>
      <p class="text-xl md:text-3xl text-slate-600 font-medium mb-8 max-w-3xl mx-auto">
        Perito en Mercadotecnia y Publicidad
      </p>
      <p class="max-w-2xl text-lg text-slate-500 mb-12 leading-relaxed mx-auto">
        Especialista en procesos administrativos con más de <span class="font-bold text-primary">8 años de trayectoria</span>, enfocada en la eficiencia operativa, ética y transparencia financiera.
      </p>
    </div>
    
    <div class="flex flex-col sm:flex-row gap-5 reveal delay-200">
      <a href="#contacto" class="inline-flex items-center justify-center px-8 py-4 border border-transparent text-lg font-bold rounded-full text-white bg-gradient-to-r from-primary to-blue-700 hover:from-blue-800 hover:to-primary transform hover:scale-105 transition-all shadow-lg hover:shadow-primary/30 active:scale-95">
        Contactar para Entrevista
      </a>
      <a href="#experiencia" class="inline-flex items-center justify-center px-8 py-4 border-2 border-slate-200 text-lg font-semibold rounded-full text-slate-600 bg-white/50 backdrop-blur-sm hover:bg-white hover:border-primary/50 hover:text-primary transform hover:-translate-y-1 transition-all shadow-sm hover:shadow-md">
        Ver Experiencia
      </a>
    </div>
  </div>
</section>
