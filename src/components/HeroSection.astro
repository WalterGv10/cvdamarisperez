<section class="relative min-h-[95vh] flex items-center justify-center overflow-hidden py-12">
  <!-- Dynamic Vivid Background -->
  <div class="absolute inset-0 bg-slate-50"></div>
  <div class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-primary/20 rounded-full blur-[120px] animate-pulse-slow"></div>
  <div class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-vibrant/20 rounded-full blur-[120px] animate-float"></div>
  <div class="absolute top-[20%] right-[10%] w-[30%] h-[30%] bg-purple/10 rounded-full blur-[100px] animate-pulse-slow"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 flex flex-col lg:flex-row items-center gap-12 z-10">
    <!-- Image Column -->
    <div class="reveal reveal-left order-1 flex-shrink-0">
      <div class="relative group">
        <!-- Decoration rings -->
        <div class="absolute -inset-4 bg-gradient-to-tr from-primary/20 to-accent/20 rounded-full blur-2xl group-hover:opacity-100 transition-opacity duration-500 opacity-70"></div>
        <div class="absolute -inset-1 bg-gradient-to-tr from-primary to-accent rounded-full opacity-20 group-hover:opacity-40 transition-opacity duration-500"></div>
        
        <!-- Image Container -->
        <div class="relative w-64 h-64 md:w-80 md:h-80 rounded-full overflow-hidden border-4 border-white shadow-2xl">
          <img 
            src="/perfil.jpg" 
            alt="Damaris Aracely Pérez Gonzalez" 
            class="w-full h-full object-cover object-[center_20%] scale-110 group-hover:scale-125 transition-transform duration-700"
          />
        </div>
        
        <!-- Badge -->
        <div class="absolute -bottom-2 -right-2 bg-white px-5 py-2.5 rounded-full shadow-lg border border-slate-100 flex items-center gap-2.5">
          <div class="relative flex h-3 w-3">
            <span class="animate-sonar absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </div>
          <span class="text-xs font-bold text-slate-700 uppercase tracking-widest">Talento Activo</span>
        </div>
      </div>
    </div>

    <!-- Content Column -->
    <div class="flex-1 text-center lg:text-left order-2">
      <div class="space-y-6">
        <h1 class="reveal reveal-blur text-5xl md:text-7xl font-bold tracking-tight text-slate-900 drop-shadow-sm leading-tight">
          Damaris Aracely <br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-vibrant to-purple">Pérez Gonzalez</span>
        </h1>
        <p class="reveal reveal-blur delay-200 text-xl md:text-3xl text-slate-700 font-semibold">
          Perito en Mercadotecnia y Publicidad
        </p>
        <p class="reveal reveal-blur delay-400 max-w-xl text-lg text-slate-600 leading-relaxed mx-auto lg:mx-0">
          Especialista en procesos administrativos con más de <span class="font-bold text-vibrant">8 años de trayectoria</span>, enfocada en la eficiencia operativa, ética y transparencia financiera.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-5 reveal reveal-blur delay-700 mt-12 justify-center lg:justify-start">
        <a href="#contacto" class="inline-flex items-center justify-center px-10 py-4 border border-transparent text-lg font-bold rounded-full text-white bg-gradient-to-r from-primary via-vibrant to-primary bg-[length:200%_auto] hover:bg-right transition-all duration-500 shadow-xl shadow-vibrant/20 transform hover:scale-105 active:scale-95 text-center">
          Contactar para Entrevista
        </a>
        <a href="#experiencia" class="inline-flex items-center justify-center px-8 py-4 border-2 border-slate-200 text-lg font-semibold rounded-full text-slate-600 bg-white/50 backdrop-blur-sm hover:bg-white hover:border-primary/50 hover:text-primary transform hover:-translate-y-1 transition-all shadow-sm hover:shadow-md text-center">
          Ver Experiencia
        </a>
      </div>
    </div>
  </div>
</section>
