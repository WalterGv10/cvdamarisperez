---
const experiences = [
  {
    puesto: "Asistente de Compras",
    empresa: "Grupo ITM",
    periodo: "2023 – Actualidad",
    descripcion: [
      "Gestión y elaboración de órdenes de compra.",
      "Negociación y seguimiento con proveedores (cotizaciones y entregas).",
      "Control de costos por proyecto y cumplimiento de presupuestos.",
      "Liderazgo en la cadena de suministro interna."
    ]
  },
  {
    puesto: "Recepción / RRHH",
    empresa: "Grupo ITM",
    periodo: "2016 – 2023",
    descripcion: [
      "Atención telefónica y presencial a clientes y proveedores.",
      "Gestión de trámites administrativos (IRTRA, control de vacaciones y asistencia).",
      "Gestión de relaciones con proveedores externos."
    ]
  },
  {
    puesto: "Auxiliar de Producción y Ensamblaje",
    empresa: "Accesorios Globles S.A",
    periodo: "Mar 2015 – Dic 2015",
    descripcion: [
      "Producción de cinchos de cuero y control visual de calidad."
    ]
  }
];
---

<section id="experiencia" class="py-24 relative overflow-hidden bg-indigo-50/30">
  <div class="absolute top-0 right-0 w-64 h-64 bg-vibrant/5 rounded-full blur-3xl"></div>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <h2 class="text-4xl font-bold text-slate-900 mb-16 text-center reveal text-backdrop">
      Experiencia <span class="text-vibrant">Laboral</span>
    </h2>
    <div class="space-y-12">
      {experiences.map((exp, index) => (
        <div class={`relative pl-8 sm:pl-32 py-2 group reveal delay-${index * 100}`}>
          <!-- Decoration background behind card -->
          <div class="absolute inset-0 -z-10 bg-gradient-to-tr from-vibrant/5 to-purple/5 blur-3xl rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          
          <!-- Timeline Line -->
          <div class="absolute left-2 sm:left-0 top-0 bottom-0 w-0.5 bg-gradient-to-b from-vibrant/20 via-vibrant/40 to-vibrant/5 group-last:bottom-auto group-last:h-full"></div>
          
          <!-- Dot -->
          <div class="absolute left-[calc(0.5rem-0.375rem)] sm:left-[-0.375rem] top-6 w-4 h-4 bg-white rounded-full border-[3px] border-vibrant shadow-[0_0_15px_rgba(99,102,241,0.3)] group-hover:scale-125 group-hover:border-purple transition-transform duration-300"></div>

          <!-- Date (Desktop) -->
          <div class="hidden sm:block absolute left-[-12rem] top-5 w-40 text-right pr-10">
            <span class="text-lg font-bold text-slate-400 group-hover:text-primary transition-colors duration-300 block">{exp.periodo}</span>
          </div>

          <!-- Content -->
          <div class="bg-white/80 backdrop-blur-sm p-8 rounded-2xl shadow-sm border border-slate-100 hover:shadow-xl hover:shadow-blue-900/5 hover:-translate-y-1 transition-all duration-300 group-hover:border-primary/20">
             <!-- Date (Mobile) -->
             <div class="sm:hidden text-sm font-bold text-accent mb-2 uppercase tracking-wide">
              {exp.periodo}
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-1">{exp.puesto}</h3>
            <p class="text-lg text-primary font-medium mb-6 flex items-center">
              <svg class="w-5 h-5 mr-2 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
              {exp.empresa}
            </p>
            <ul class="space-y-3">
              {exp.descripcion.map((item) => (
                <li class="flex items-start text-slate-600 group-hover:text-slate-700 transition-colors">
                  <span class="mr-3 mt-2 w-1.5 h-1.5 bg-accent rounded-full flex-shrink-0 shadow-[0_0_8px_rgba(6,182,212,0.6)]"></span>
                  <span class="leading-relaxed">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
