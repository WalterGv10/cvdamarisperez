---
const competencies = [
  {
    title: "Gestión de Compras",
    color: "primary",
    items: [
      "Negociación estratégica y trato con proveedores",
      "Elaboración y seguimiento de órdenes de compra",
      "Análisis de cotizaciones y gestión de entregas"
    ]
  },
  {
    title: "Administración y Control",
    color: "vibrant",
    items: [
      "Atención al cliente (presencial y telefónica)",
      "Gestión de trámites administrativos (IRTRA)",
      "Control de asistencia y vacaciones"
    ]
  },
  {
    title: "Habilidades Blandas",
    color: "purple",
    items: [
      "Trabajo en equipo multidisciplinario",
      "Comunicación efectiva y asertiva",
      "Alta ética y responsabilidad"
    ]
  }
];
---

<section id="habilidades" class="py-24 bg-white relative overflow-hidden">
  <div class="absolute top-1/2 left-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-purple/5 rounded-full blur-3xl"></div>
  
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <h2 class="text-4xl font-bold text-slate-900 mb-16 text-center reveal text-backdrop">
      Competencias Clave <span class="text-vibrant">y Habilidades</span>
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {competencies.map((comp, index) => (
        <div class={`relative group reveal delay-${index * 100}`}>
          <!-- Aura effect -->
          <div class={`absolute inset-0 bg-gradient-to-tr from-${comp.color}/10 to-${comp.color}/5 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10`}></div>
          
          <div class="bg-white border-l-4 border-primary p-8 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 h-full">
            <h3 class={`text-xl font-bold text-${comp.color} mb-6`}>{comp.title}</h3>
            <ul class="space-y-4">
              {comp.items.map((item) => (
                <li class="flex items-start gap-3 text-slate-600">
                  <span class={`mt-1.5 w-2 h-2 bg-${comp.color} rounded-full flex-shrink-0`}></span>
                  <span class="leading-relaxed">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
